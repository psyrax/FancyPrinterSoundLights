<form class="form-horizontal">
    <div class="control-group">
        <label class="control-label">{{ _('PORT') }}</label>
        <div class="controls">
            <select class="input-block-level" data-bind="value: settings.plugins.FancyPrinterArduino.selectedPort">
            {% for port in plugin_FancyPrinterArduino_ports %}
                <option value="{{ port }}">{{ port }}</option>
            {% endfor %}
            </select>
        </div>
    </div>
</form>